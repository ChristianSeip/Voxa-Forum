{% extends 'base.html.twig' %}

{% block title %}{{ 'profile.preferences.title'|trans }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="h4">{{ 'profile.preferences.title'|trans }}</h1>

            {% for msg in app.flashes('success') %}
                <div class="alert alert-success mt-3">{{ msg }}</div>
            {% endfor %}

            {{ form_start(preferencesForm) }}

            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(preferencesForm.locale) }}
                        {{ form_widget(preferencesForm.locale, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(preferencesForm.locale) }}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        {{ form_label(preferencesForm.timezone) }}
                        {{ form_widget(preferencesForm.timezone, { attr: { class: 'form-select' } }) }}
                        {{ form_errors(preferencesForm.timezone) }}
                    </div>
                </div>
            </div>

            <hr class="my-4">

            <h2 class="h6 text-muted">{{ 'profile.preferences.privacy'|trans }}</h2>

            <div class="mb-3">
                {% for child in preferencesForm.settings %}
                    <div class="form-check mb-2">
                        {{ form_widget(child, {
                            attr: { class: 'form-check-input' }
                        }) }}
                        {{ form_label(child, null, {
                            label_attr: { class: 'form-check-label' }
                        }) }}
                    </div>
                {% endfor %}
            </div>

            <div class="mt-4">
                <button class="btn btn-primary">{{ 'profile.preferences.save'|trans }}</button>
            </div>

            {{ form_end(preferencesForm) }}
        </div>
    </div>
{% endblock %}