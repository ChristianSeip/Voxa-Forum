{% extends 'base.html.twig' %}

{% block title %}{{ 'password_reset.check_email.title'|trans }}{% endblock %}

{% block body %}
    <div class="card shadow-sm">
        <div class="card-body">

            <h1 class="h4 mb-4">{{ 'password_reset.check_email.title'|trans }}</h1>

            <p class="mb-3">
                {{ 'password_reset.check_email.message'|trans }}
                {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
            </p>

            <p>
                {{ 'password_reset.check_email.not_received'|trans }}
                <a href="{{ path('app_forgot_password_request') }}" class="link-secondary">
                    {{ 'password_reset.check_email.retry'|trans }}
                </a>.
            </p>

        </div>
    </div>
{% endblock %}

