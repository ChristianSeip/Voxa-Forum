<table width="100%" cellpadding="0" cellspacing="0" style="font-family: Arial, sans-serif; font-size: 16px; line-height: 1.5; color: #333;">
    <tr>
        <td align="center">
            <table width="600" cellpadding="0" cellspacing="0" style="margin: 20px auto; padding: 20px; border: 1px solid #ddd; border-radius: 6px;">
                <tr>
                    <td>
                        <h1 style="font-size: 22px; margin-top: 0;">{{ 'password_reset.email.greeting'|trans }}</h1>

                        <p>{{ 'password_reset.email.body'|trans }}</p>

                        <p style="margin: 30px 0;">
                            <a href="{{ url('app_reset_password', {token: resetToken.token}) }}"
                               style="background-color: #0d6efd; color: #fff; padding: 10px 20px; text-decoration: none; border-radius: 4px; display: inline-block;">
                                {{ 'password_reset.email.cta'|trans }}
                            </a>
                        </p>

                        <p style="font-size: 14px; color: #555;">
                            {{ 'password_reset.email.expiration'|trans({}, 'ResetPasswordBundle') ~ ' ' }}
                            {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                        </p>

                        <p style="color: #888; font-size: 14px;">
                            {{ 'password_reset.email.closing'|trans }}
                        </p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
